  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/types/express.d.ts"],
  "exclude": ["node_modules"],
  "files": ["src/types/express.d.ts"]
}
