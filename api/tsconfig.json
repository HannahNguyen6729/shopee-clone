{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "build",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/types/express.d.ts",
    "index.ts",
    "./src/**/*",
    "src/**/*"
  ],
  "ts-node": {
    "files": true
  },
  "exclude": ["node_modules"],
  "files": ["src/types/express.d.ts"]
}
